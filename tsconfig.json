{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",

    /* Emit */
    "outDir": "./dist",
    "rootDir": "./src", // <-- CHANGE THIS LINE: Set rootDir to your source folder
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Type Roots (explicitly telling TypeScript where to find @types) */
    // This line is now less critical but still correct if you want to be explicit
    "typeRoots": ["./node_modules/@types"]
  },
  // Ensure your include covers your source files relative to the project root
  "include": [
    "src/**/*.ts", // This is correct for your source files
    "src/**/*.d.ts" // This is correct for your custom declaration files
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}